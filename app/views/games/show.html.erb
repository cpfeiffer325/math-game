<section class="game">
  <div class="header">
    <h1>Mad Minute Math</h1>
    <p>Hello <strong><%=@game.player_name%></strong>, I built this Math game for you :)</p>
    <div class="button-menu">
      <%= button_to "New User", root_path, method: :get%>
      <%= button_to "Restart", @game, method: :get%>
      <%= button_to "New Game", new_game_path, method: :get%>
    </div>
  </div>

  <div class="content">
    <div class="grid-container">
      <div class="label">X</div>
      <div class="label"><%=@game.column_values[0]%></div>
      <div class="label"><%=@game.column_values[1]%></div>
      <div class="label"><%=@game.column_values[2]%></div>
      <div class="label"><%=@game.column_values[3]%></div>
      <div class="label"><%=@game.column_values[4]%></div>
      <div class="label"><%=@game.row_values[0]%></div>
      <input id="cell_0_3" data-row="0" data-col="4" class="answer" type="text">
      <input class="answer" type="text">
      <input class="answer" type="text">
      <input class="answer" type="text">
      <input class="answer" type="text">
      <div class="label"><%=@game.row_values[1]%></div>
      <input class="answer" type="text">
      <input class="answer" type="text">
      <input class="answer" type="text">
      <input class="answer" type="text">
      <input class="answer" type="text">
      <div class="label"><%=@game.row_values[2]%></div>
      <input class="answer" type="text">
      <input class="answer" type="text">
      <input class="answer" type="text">
      <input class="answer" type="text">
      <input class="answer" type="text">
      <div class="label"><%=@game.row_values[3]%></div>
      <input class="answer" type="text">
      <input class="answer" type="text">
      <input class="answer" type="text">
      <input class="answer" type="text">
      <input class="answer" type="text">
      <div class="label"><%=@game.row_values[4]%></div>
      <input class="answer" type="text">
      <input class="answer" type="text">
      <input class="answer" type="text">
      <input class="answer" type="text">
      <input class="answer" type="text">
    </div>
  </div>
</section>
